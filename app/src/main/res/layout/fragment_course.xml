<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mengft.mengft_ui.Compenent.TopBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:title="@string/tab_menu_course" />

            <!--在线课程-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Header-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingRight="@dimen/paddingRightLong"
                    android:paddingBottom="16dp"
                    android:layout_marginLeft="@dimen/paddingLeftLong"
                    android:background="@drawable/topbar_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="在线课程"
                        android:textColor="@color/colorTitle" />

                </RelativeLayout>

                <!--Article List-->
                <com.mengft.mengft_ui.Compenent.ListViewForScrollView
                    android:id="@+id/lv_course_online"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/paddingLeftLong"
                    style="@style/listview"/>

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/colorBorder" />

            <!--线下活动-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Header-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingRight="@dimen/paddingRightLong"
                    android:paddingBottom="16dp"
                    android:layout_marginLeft="@dimen/paddingLeftLong"
                    android:background="@drawable/topbar_border">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="线下活动"
                        android:textColor="@color/colorTitle" />

                </RelativeLayout>

                <!--Article List-->
                <com.mengft.mengft_ui.Compenent.ListViewForScrollView
                    android:id="@+id/lv_course_offline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/paddingLeftLong"
                    style="@style/listview"/>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</ScrollView>


