<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/alertdialog_message"
    android:orientation="vertical">

    <!--message-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_alertdialog_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒标题"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/font15" />

        <TextView
            android:id="@+id/tv_alertdialog_message_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="提醒信息"
            android:textColor="@color/colorLightTitle"
            android:textSize="@dimen/font13" />

    </LinearLayout>

    <!--buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/top_border">

        <Button
            android:id="@+id/bt_alertdialog_message_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_alertdialog"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font15" />

        <View
            android:layout_width="@dimen/borderHeight"
            android:layout_height="match_parent"
            android:background="@color/colorBorder"/>

        <Button
            android:id="@+id/bt_alertdialog_message_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_alertdialog"
            android:text="取消"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font15" />

    </LinearLayout>

</LinearLayout>